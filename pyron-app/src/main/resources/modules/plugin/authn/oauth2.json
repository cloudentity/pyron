{
  "registry:system": {
    "oidc-client": {
      "main": "com.cloudentity.pyron.plugin.impl.authn.MultiOidcClient",
      "verticleConfig": {
        "jwkReload": 60000,
        "idps": [
          {
            "host": "$env:PLUGIN_AUTHN_OAUTH2__SERVER_HOST:string",
            "port": "$env:PLUGIN_AUTHN_OAUTH2__SERVER_PORT:int",
            "ssl": "$env:PLUGIN_AUTHN_OAUTH2__SERVER_SSL:boolean",
            "jwkEndpoint": "$env:PLUGIN_AUTHN_OAUTH2__JWK_ENDPOINT:string",
            "http": {
              "_nullify": true,
              "trustAll": "$env:?PLUGIN_AUTHN_OAUTH2__TRUST_ALL:boolean",
              "pemTrustOptions": {
                "_nullify": true,
                "certPaths": "$env:?PLUGIN_AUTHN_OAUTH2__PEM_TRUST_OPTIONS__CERT_PATHS:array",
                "certValues": "$env:?PLUGIN_AUTHN_OAUTH2__PEM_TRUST_OPTIONS__CERT_VALUES:array"
              }
            }
          }
        ]
      }
    }
  },
  "plugin:authn": {
    "methodsMapping": {
      "oauth2": "oauthJWTAuthnProvider"
    },
    "entitiesMapping": {
      "oauth2": {
        "jwt": "jwtContentProvider"
      }
    }
  },
  "registry:authn-method-providers": {
    "oauthJWTAuthnProvider": { "main": "com.cloudentity.pyron.plugin.impl.authn.methods.OAuthAuthorizationCodeAuthnProvider" }
  },
  "registry:authn-entity-providers": {
    "jwtContentProvider": { "main": "com.cloudentity.pyron.plugin.impl.authn.entities.JWTContentProvider" }
  }
}