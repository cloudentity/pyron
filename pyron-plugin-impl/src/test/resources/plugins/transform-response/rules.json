{
  "env": {
    "PLUGIN_TRANSFORM_RESPONSE_CONF_REF": "$ref:transform-response-conf"
  },
  "transform-response-conf": {
    "param": "value"
  },
  "rules": [
    {
      "default": {
        "targetHost": "localhost",
        "targetPort": 7760
      },
      "endpoints": [
        {
          "method": "GET",
          "pathPattern": "/fixed-header",
          "responsePlugins": [
            {
              "name": "transform-response",
              "conf": {
                "headers": {
                  "set": {
                    "H": "new-value"
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}