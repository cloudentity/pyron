{
  "vertx": {
    "logger-delegate-factory-class-name": "io.vertx.core.logging.SLF4JLogDelegateFactory"
  },
  "orchis": {
    "app": {
      "port": 7770,
      "serverVerticles": 1,
      "rules": "$ref:rules"
    }
  },
  "registry:request-plugins": {
    "plugin:signature": { "main": "com.cloudentity.edge.plugin.impl.signature.SignaturePlugin" }
  },
  "registry:system": {
    "symmetric-jwt-service": { "main": "com.cloudentity.edge.jwt.impl.SymmetricJwtService" }
  },
  "plugin:signature": {
    "serviceFingerprint": {
      "jwtServiceAddress": "symmetric",
      "authHeader": {
        "name": "x-ce-fingerprint"
      }
    },
    "identityContext": {
      "jwtServiceAddress": "symmetric",
      "authHeader": {
        "name": "x-ce-context"
      }
    }
  },
  "symmetric-jwt-service": {
    "secret": "secret",
    "issuer": "test-orchis-api-gateway",
    "expiresIn": "PT60S"
  }
}
