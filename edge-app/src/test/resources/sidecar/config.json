{
  "plugin:outgoingDefaultJwt": {
    "jwtServiceAddress": "asymmetric"
  },
  "plugin:outgoingCustomJwt": {
    "jwtServiceAddress": "asymmetric"
  },
  "registry:authn-method-providers": {
    "jwtAuthnProvider": {
      "verticleConfig": {
        "jwtServiceAddress": "asymmetric"
      }
    }
  },
  "rules": [
    {
      "default": {
        "pathPrefix": "/service",
        "targetHost": "localhost",
        "targetPort": 7760,
        "subDomainPattern": ".*",
        "dropPrefix": true
      },
      "request": {
        "postFlow": {
          "plugins": [
            {
              "name": "outgoingDefaultJwt",
              "conf": {}
            }
          ]
        }
      },
      "endpoints": [
        {
          "method": "GET",
          "pathPattern": "/authn-with-jwt",
          "requestPlugins": [
            {
              "name": "authn",
              "conf": {
                "methods": [
                  "jwt"
                ],
                "entities": [
                  "jwtContent"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
