{
  "vertx": {
    "logger-delegate-factory-class-name": "io.vertx.core.logging.SLF4JLogDelegateFactory"
  },
  "orchis": {
    "app": {
      "port": 7770,
      "serverVerticles": 1,
      "rules": "$ref:rules"
    },
    "jwt": {
      "secret": "secret",
      "issuer": "test-orchis-api-gateway",
      "expiresIn": "PT60S"
    }
  },
  "plugin:authn": {
    "methodsMapping": {
      "anonymous": "anonymousAuthnProvider",
      "oauth10": "oauth10AuthnProvider"
    },
    "entitiesMapping": {
    }
  },
  "registry:authn-method-providers": {
    "anonymousAuthnProvider": {
      "main": "com.cloudentity.edge.plugin.impl.authn.methods.AnonymousAuthnProvider"
    },
    "oauth10AuthnProvider": {
      "main": "com.cloudentity.edge.plugin.impl.authn.methods.oauth10.OAuth10AuthnProvider",
      "verticleConfig": {
        "header": {
          "name": "Authorization",
          "valueRegexp": "OAuth (.*)"
        },
        "publicDomain": {
          "host": "127.0.0.1",
          "port": 7770,
          "ssl": false
        },
        "skewTimeInSeconds": 15
      }
    }
  },
  "signing-key-loader-verticle": {
    "publicKeys": "$ref:publicKeys"
  },
  "registry:request-plugins": {
    "plugin:authn": { "main": "com.cloudentity.edge.plugin.impl.authn.AuthnPlugin" }
  },
  "registry:response-plugins": {
  },
  "registry:sd": {
    "sd": { "main": "com.cloudentity.tools.vertx.sd.SdVerticle" }
  },
  "registry:system": {
    "fixed-sd-provider": { "main": "com.cloudentity.tools.vertx.sd.provider.FixedSdProvider" },
    "cache": { "main": "com.cloudentity.tools.vertx.hazelcast.inmemory.InMemoryHazelcastVerticle" }
  },
  "circuit-breakers": {
    "off": true
  },
  "fixed-sd-provider": {
    "records": [
      {
        "name": "sample-rs",
        "metadata": {
          "ID": "sample-rs:localhost:7760"
        },
        "location": {
          "host": "localhost",
          "port": 7760,
          "ssl": false
        }
      }
    ]
  }
}
