{
  "rules": [
    {
      "default": {
        "pathPrefix": "/service",
        "targetHost": "localhost",
        "targetPort": 7760
      },
      "endpoints": [
        {
          "method": "GET",
          "pathPattern": "/path-for-default-header",
          "requestPlugins": [
            {
              "name": "headerToCtx",
              "conf": { "headers": ["user"] }
            },
            {
              "name": "outgoingCustomJwt",
              "conf": {
                "mapping": {
                  "cnt": {
                    "usr": "${content.user}",
                    "status": "${content.session.status}"
                  }
                },
                "defaults": {
                  "content.session.status": "inactive"
                },
                "jwtServiceAddress": "other-symmetric"
              }
            }
          ]
        },
        {
          "method": "GET",
          "pathPattern": "/path-for-custom-header",
          "requestPlugins": [
            {
              "name": "headerToCtx",
              "conf": { "headers": ["user"] }
            },
            {
              "name": "outgoingCustomJwt-customHeader",
              "conf": {
                "mapping": {
                  "cnt": {
                    "usr": "${content.user}",
                    "status": "${content.session.status}"
                  }
                },
                "defaults": {
                  "content.session.status": "inactive"
                },
                "jwtServiceAddress": "other-symmetric"
              }
            }
          ]
        }
      ]
    }
  ]
}